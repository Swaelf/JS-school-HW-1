{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "allowJs": true,
    "noImplicitAny": true
  },
  "include": ["./oop/**/*"],
  "exclude": ["node_modules"],
  "paths": {
      "@app/*": ["oop/**/*"]
    }
}
    